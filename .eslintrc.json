{
    "globals": {},
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            "error",
            "always"
        ],
	"no-unused-vars": [
	    "error",
            {
                "vars": "local",
		"argsIgnorePattern": "^_",
		"varsIgnorePattern": "^_"
            }
	],
	"max-len": [
	    "error",
	    {
		"code": 80,
		"tabWidth": 8
	    }
	],
	"array-bracket-spacing": [
		"error",
		"always"
	],
	"object-curly-spacing": [
		"error",
		"always"
	],
	"no-extra-parens": [
		"error"
	],
	"no-template-curly-in-string": [
		"error"
	],
	"no-unreachable-loop": [
		"error"
	],
	"block-scoped-var": [
		"error"
	],
	"curly": [
		"error",
		"multi-or-nest",
		"consistent"
	],
	"no-alert": [
		"error"
	],
	"no-else-return": [
		"error"
	],
	"no-empty-function": [
		"error"
	],
	"no-self-compare": [
		"error"
	],
	"no-useless-return": [
		"error"
	],
	"brace-style": [
		"error"
	]
    }
}
